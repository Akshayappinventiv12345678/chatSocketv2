{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "outDir": "./dist/src",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
